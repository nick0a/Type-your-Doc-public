{
  "name": "maritime-sof-processor",
  "version": "1.0.0",
  "description": "Maritime SOF Document Processing System using Mistral OCR and Claude",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:classifier": "jest src/tests/pageClassifier.test.ts",
    "test:extractor": "jest src/tests/sofExtractor.test.ts",
    "test:phase": "jest src/tests/phaseValidation.test.ts",
    "test:simple": "jest src/tests/simple.test.ts",
    "test:document": "ts-node src/tests/documentTest.ts",
    "test:pdf2img": "ts-node src/tests/testPdfToImage.ts",
    "evaluate": "ts-node src/evaluation/runClassificationEvaluation.ts",
    "test:evaluate": "ts-node src/evaluation/testEvaluation.ts",
    "create:validation": "ts-node src/evaluation/classification/createValidationDataset.ts",
    "run:validation": "ts-node src/evaluation/createAndRunValidation.ts",
    "ocr:test": "ts-node src/evaluation/runMistralOCRTest.ts",
    "ocr:random": "ts-node src/evaluation/runMistralOCRTest.ts --random",
    "ocr:pdf2img": "ts-node src/evaluation/runMistralOCRTest.ts --pdf-to-image",
    "run:pdf2ocr": "NODE_ENV=production ts-node src/tests/runPdf2ImageOcr.ts",
    "ocr:image-url": "ts-node src/tests/runImageUrlOcr.ts",
    "ocr:image-url-custom": "ts-node src/tests/runImageUrlOcr.ts"
  },
  "dependencies": {
    "@mistralai/mistralai": "^1.5.2",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "fast-csv": "^5.0.2",
    "fs-extra": "^11.2.0",
    "node-poppler": "^7.2.4",
    "papaparse": "^5.5.2",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.11.9",
    "@types/papaparse": "^5.3.15",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
